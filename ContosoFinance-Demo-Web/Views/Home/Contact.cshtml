<section class="store">
    <div class="container">
        <div class="row">
            <div class="wrapper clearfix">
                <aside class="content contact-wrap">
                    <div id="map-wrapper">
                    </div>
                    <div class="contact-form clearfix">
                        <form>
                            <div class="form-group">
                                <input type="email" class="form-control text" placeholder="your name">
                            </div>
                            <div class="form-group">
